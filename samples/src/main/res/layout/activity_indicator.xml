<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qfxl.samples.activity.IndicatorSampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.qfxl.view.banner.Banner
            android:id="@+id/banner_indicator_1"
            android:layout_width="match_parent"
            android:layout_height="130dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.qfxl.view.banner.Banner
            android:id="@+id/banner_indicator_2"
            android:layout_width="match_parent"
            android:layout_height="130dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.qfxl.view.banner.Banner
            android:id="@+id/banner_indicator_3"
            android:layout_width="match_parent"
            android:layout_height="130dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.qfxl.view.banner.Banner
            android:id="@+id/banner_indicator_4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:banner_autoStart="true"
            app:banner_infinityLoop="true"
            app:banner_indicatorGravity="right"
            app:banner_indicatorHeight="20dp"
            app:banner_loopInterval="1000"
            app:banner_indicatorItemHeight="10dp"
            app:banner_indicatorItemWidth="10dp"
            app:banner_indicatorNormalResId="@drawable/indicator_pentagram_normal"
            app:banner_indicatorPosition="bottom"
            app:banner_indicatorSelectResId="@drawable/indicator_pentagram_selected" />

    </LinearLayout>
</ScrollView>
