<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qfxl.samples.IndicatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.qfxl.view.viewpager.XViewPager
            android:id="@+id/xvp_indicator_1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:xvp_loopInterval="1000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.qfxl.view.viewpager.XViewPager
            android:id="@+id/xvp_indicator_2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:xvp_loopInterval="1000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.qfxl.view.viewpager.XViewPager
            android:id="@+id/xvp_indicator_3"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:xvp_loopInterval="1000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.qfxl.view.viewpager.XViewPager
            android:id="@+id/xvp_indicator_4"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:xvp_loopInterval="1000" />
    </LinearLayout>
</ScrollView>
