<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.banner.Banner
            android:layout_width="match_parent"
            android:id="@+id/banner_transform_1"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:banner_autoScrollDuration="1500"
            app:banner_indicatorAlignParentBottom="true"
            app:banner_indicatorCenterHorizontal="true"
            app:banner_indicatorDefaultColor="#999"
            app:banner_indicatorSelectColor="@color/colorAccent"
            app:banner_indicatorStyle="CIRCLE_SMOOTH" />

        <com.github.banner.Banner
            android:id="@+id/banner_transform_2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:banner_autoScrollDuration="1500"
            app:banner_indicatorAlignParentBottom="true"
            app:banner_indicatorCenterHorizontal="true"
            app:banner_indicatorDefaultColor="#999"
            app:banner_indicatorSelectColor="@color/colorAccent"
            app:banner_indicatorStyle="RECT_SMOOTH" />

        <com.github.banner.Banner
            android:id="@+id/banner_transform_3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:banner_autoScrollDuration="1500"
            android:layout_marginTop="16dp"
            app:banner_indicatorAlignParentBottom="true"
            app:banner_indicatorCenterHorizontal="true"
            app:banner_indicatorDefaultColor="#999"
            app:banner_indicatorRoundRectRadius="16dp"
            app:banner_indicatorSelectColor="@color/colorAccent"
            app:banner_indicatorStyle="ROUND_RECT_SMOOTH" />

        <com.github.banner.Banner
            android:id="@+id/banner_transform_4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:banner_autoScrollDuration="1500"
            app:banner_indicatorAlignParentBottom="true"
            app:banner_indicatorCenterHorizontal="true"
            app:banner_indicatorDefaultColor="#999"
            app:banner_indicatorItemSelectWidth="10dp"
            app:banner_indicatorSelectColor="@color/colorAccent"
            app:banner_indicatorStyle="CIRCLE" />

        <com.github.banner.Banner
            android:id="@+id/banner_transform_5"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:banner_autoScrollDuration="1500"
            app:banner_indicatorAlignParentBottom="true"
            app:banner_indicatorCenterHorizontal="true"
            app:banner_indicatorDefaultColor="#999"
            app:banner_indicatorItemSelectWidth="10dp"
            app:banner_indicatorSelectColor="@color/colorAccent"
            app:banner_indicatorStyle="RECT_SMOOTH" />
    </LinearLayout>
</ScrollView>