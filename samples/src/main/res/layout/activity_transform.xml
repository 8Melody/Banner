<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qfxl.samples.activity.TransformSampleActivity">

    <com.qfxl.view.banner.Banner
        android:id="@+id/banner_transform_1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:banner_autoLoop="false" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <com.qfxl.view.banner.Banner
        android:id="@+id/banner_transform_2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:banner_autoLoop="false" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <com.qfxl.view.banner.Banner
        android:id="@+id/banner_transform_3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:banner_autoLoop="false" />
</LinearLayout>
