<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qfxl.samples.activity.OtherSampleActivity">

    <com.qfxl.view.banner.Banner
        android:id="@+id/banner_others1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:clipChildren="false"
        app:banner_autoStart="true"
        app:banner_infinityLoop="true"
        app:banner_loopInterval="1000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <com.qfxl.view.banner.Banner
        android:id="@+id/banner_others2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:clipChildren="false"
        app:banner_autoStart="true"
        app:banner_infinityLoop="true"
        app:banner_loopInterval="1000" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <com.qfxl.view.banner.Banner
        android:id="@+id/banner_others3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:clipChildren="false"
        app:banner_autoStart="true"
        app:banner_infinityLoop="true"
        app:banner_loopInterval="1000" />
</LinearLayout>
