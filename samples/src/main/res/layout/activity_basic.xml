<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.banner.Banner
        android:id="@+id/banner_basic_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:banner_indicatorDefaultColor="#999"
        app:banner_indicatorSelectColor="@color/colorAccent"
        app:banner_indicatorStyle="CIRCLE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.banner.Banner
        android:id="@+id/banner_basic_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:banner_indicatorItemHeight="2dp"
        app:banner_indicatorItemSelectHeight="2dp"
        app:banner_indicatorItemWidth="10dp"
        app:banner_indicatorSelectColor="@color/colorAccent"
        app:banner_indicatorStyle="RECT"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_basic_1" />

    <com.github.banner.Banner
        android:id="@+id/banner_basic_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:banner_indicatorRoundRectRadius="4dp"
        app:banner_indicatorSelectColor="@color/colorAccent"
        app:banner_indicatorStyle="ROUND_RECT"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_basic_2" />
</androidx.constraintlayout.widget.ConstraintLayout>