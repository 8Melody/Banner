<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf8f8"
    android:orientation="vertical"
    tools:context="com.qfxl.samples.BasicUseActivity">

    <com.qfxl.view.viewpager.XViewPager
        android:id="@+id/xvp_basic_banner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:xvp_autoLoop="true"
        app:xvp_enableInfinityLoop="true"
        app:xvp_indicatorHeight="20dp"
        app:xvp_indicatorItemHeight="2dp"
        app:xvp_indicatorItemWidth="10dp"
        app:xvp_indicatorGravity="center"
        app:xvp_indicatorMargin="3dp"
        app:xvp_indicatorNormalResId="@drawable/sp_line_indicator_normal"
        app:xvp_indicatorSelectResId="@drawable/sp_line_indicator_selected"
        app:xvp_loopInterval="1000"
        app:xvp_pageOffscreenLimit="1"
        app:xvp_scrollDuration="500"
        app:xvp_touchEnable="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <com.qfxl.view.viewpager.XViewPager
        android:id="@+id/xvp_basic_banner2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#fff" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <com.qfxl.view.viewpager.XViewPager
        android:id="@+id/xvp_shortcut"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#fff" />

</LinearLayout>
