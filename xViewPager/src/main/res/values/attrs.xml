<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XViewPager">
        <!--是否可以无限循环-->
        <attr name="XViewPager_enableInfinityLoop" format="boolean" />
        <!--是否自动滚动-->
        <attr name="XViewPager_autoLoop" format="boolean" />
        <!--自动轮播时间(ms)-->
        <attr name="XViewPager_loopInterval" format="integer" />
        <!--是否可以手动滑动-->
        <attr name="XViewPager_touchEnable" format="boolean" />
        <!--滑动的速率(ms)-->
        <attr name="XViewPager_scrollDuration" format="integer" />
        <!--viewPager的pageMargin-->
        <attr name="XViewPager_pageMargin" format="dimension" />
        <!--viewPager离屏缓存item个数-->
        <attr name="XViewPager_pageOffscreenLimit" format="integer" />
        <!--指示器的背景色-->
        <attr name="XViewPager_indicatorBackgroundColor" format="color" />
        <!--指示器的位置(上中下)-->
        <attr name="XViewPager_indicatorPosition" format="enum">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <!--以下是默认的指示器设置-->
        <!--默认指示器的选中资源id-->
        <attr name="XViewPager_defaultIndicatorSelectResId" format="reference" />
        <!--默认指示器的正常资源id-->
        <attr name="XViewPager_defaultIndicatorNormalResId" format="reference" />
        <!--默认指示器item的间距-->
        <attr name="XViewPager_defaultIndicatorMargin" format="dimension" />
        <!--默认指示器item的大小-->
        <attr name="XViewPager_defaultIndicatorSize" format="dimension" />
        <!--默认指示器的gravity-->
        <attr name="XViewPager_defaultIndicatorGravity" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
</resources>