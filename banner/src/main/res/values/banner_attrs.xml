<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Banner">
        <!--banner orientation-->
        <attr name="banner_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <!--can loop indefinitely-->
        <attr name="banner_enableInfinityLoop" format="boolean" />
        <!--enable auto scroll-->
        <attr name="banner_enableAutoScroll" format="boolean" />
        <!--whether to scroll automatically when adapter is set-->
        <attr name="banner_autoScrollWhenAttached" format="boolean" />
        <!--auto scroll interval (ms)-->
        <attr name="banner_autoScrollInterval" format="integer" />
        <!--auto scroll duration-->
        <attr name="banner_autoScrollDuration" format="integer" />
        <!--whether to receive user gestures-->
        <attr name="banner_userInputEnable" format="boolean" />
        <!--banner inner viewPager2 page margin-->
        <attr name="banner_pageMargin" format="dimension" />
        <!--banner inner viewPager2 page offscreen limit-->
        <attr name="banner_pageOffscreenLimit" format="integer" />
        <!--for indicators -->
        <!--banner indicator style-->
        <attr name="banner_indicatorStyle" format="enum">
            <enum name="NONE" value="0" />
            <enum name="CIRCLE" value="1" />
            <enum name="RECT" value="2" />
            <enum name="ROUND_RECT" value="3" />
            <enum name="CIRCLE_SMOOTH" value="4" />
            <enum name="RECT_SMOOTH" value="5" />
            <enum name="ROUND_RECT_SMOOTH" value="6" />
        </attr>
        <!--default color of the indicator -->
        <attr name="banner_indicatorDefaultColor" format="color" />
        <!--selected color of the indicator -->
        <attr name="banner_indicatorSelectColor" format="color" />
        <!--default space between each indicator-->
        <attr name="banner_indicatorItemSpace" format="dimension" />
        <!--width of indicator-->
        <attr name="banner_indicatorItemWidth" format="dimension" />
        <!--selected width of indicator-->
        <attr name="banner_indicatorItemSelectWidth" format="dimension" />
        <!--height of indicator-->
        <attr name="banner_indicatorItemHeight" format="dimension" />
        <!--select height of indicator-->
        <attr name="banner_indicatorItemSelectHeight" format="dimension" />
        <!--round rect radius of indicator, only for RoundRectIndicator-->
        <attr name="banner_indicatorRoundRectRadius" format="dimension" />
        <!--banner layout rules, depend on RelativeLayout-->
        <attr name="banner_indicatorCenterInParent" format="boolean" />
        <attr name="banner_indicatorAlignParentStart" format="boolean" />
        <attr name="banner_indicatorAlignParentTop" format="boolean" />
        <attr name="banner_indicatorAlignParentEnd" format="boolean" />
        <attr name="banner_indicatorAlignParentBottom" format="boolean" />
        <attr name="banner_indicatorCenterHorizontal" format="boolean" />
        <attr name="banner_indicatorCenterVertical" format="boolean" />
        <!--banner indicator margins-->
        <attr name="banner_indicatorMarginStart" format="dimension" />
        <attr name="banner_indicatorMarginTop" format="dimension" />
        <attr name="banner_indicatorMarginEnd" format="dimension" />
        <attr name="banner_indicatorMarginBottom" format="dimension" />
    </declare-styleable>
</resources>